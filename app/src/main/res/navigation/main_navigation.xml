<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/listProductFragment"
        android:name="com.example.qunltd.ui.listProduct.ListProductFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_list_product" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.qunltd.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_listProductFragment"
            app:destination="@id/listProductFragment" />
        <action
            android:id="@+id/action_homeFragment_to_sellFragment"
            app:destination="@id/sellFragment" />
        <action
            android:id="@+id/action_homeFragment_to_sumFragment"
            app:destination="@id/sumFragment" />
    </fragment>
    <fragment
        android:id="@+id/sellFragment"
        android:name="com.example.qunltd.ui.sell.SellFragment"
        android:label="fragment_sell"
        tools:layout="@layout/fragment_sell" />
    <fragment
        android:id="@+id/sumFragment"
        android:name="com.example.qunltd.sum.SumFragment"
        android:label="SumFragment" />
</navigation>